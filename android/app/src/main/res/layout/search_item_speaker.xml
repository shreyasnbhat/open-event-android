<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/speakers_list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="4dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_account_circle_grey_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/speakers_list_image"
        android:orientation="vertical"
        android:padding="@dimen/padding_extra_small">

        <TextView
            android:id="@+id/speakers_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textStyle="bold"
            android:padding="@dimen/padding_small"
            android:textColor="@color/color_primary_dark"
            android:textSize="@dimen/text_size"
            tools:ignore="SpUsage"
            tools:text="Speaker Name" />

        <TextView
            android:id="@+id/speakers_list_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/padding_small"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_size_medium"
            tools:ignore="SpUsage"
            tools:text="Designation" />

        <TextView
            android:id="@+id/speakers_list_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_small"
            tools:ignore="SpUsage"
            tools:text="Country" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary_text"
        android:layout_below="@+id/speakers_list_image"/>
</RelativeLayout>
